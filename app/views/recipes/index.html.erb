<div class="recipes container">
  <div class="recipe-choices bg-primary">
    <div class="recipe-choices-header">
      <h3 class="stitch-font"><%= link_to "RECIPES", all_recipes_path %></h3>
      <div class="container">
        <%= button_to "Add a recipe", new_recipe_path, method: :get %>
      </div>
    </div>
    <div class="meal-types">
      <%= render "recipes/meal_types", :path => recipes_path %>
    </div>
    <ul class="recipe-list">
      <% @recipes.each do |recipe| %>
        <li><%= link_to recipe.name, recipe_path(recipe) %></li>
      <% end %>
    </ul>
  </div>
  <div>
    <div class="container"><%= render "quotes/quote_display", :quote => @quote %></div>
  </div>
</div>
