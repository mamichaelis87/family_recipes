<div class="recipe-display">
  <h1 class="recipe-name"><%= link_to recipe.name, recipe_path(recipe) %></h1>
  <div class="recipe">
    <div class="recipe-info">
      <% unless recipe.author == "" %>
        <p>A recipe from <%= recipe.author %></p>
      <% end %>
      <p><%= recipe.culture %> <%= recipe.meal_type %></p>
      <p><%= recipe.servings %> servings</p>
      <h3>Ingredients</h3>
      <ul class="ingredient-list">
        <% recipe.ingredients.each do |i| %>
          <li><%= i.name %>, <%= i.measurement_amount %> <%= i.measurement_type %></li>
        <% end %>
      </ul>
      <div>
        <%= link_to "Edit Recipe", edit_recipe_path(recipe) %>
      </div>
    </div>
    <div class="recipe-steps">
      <h3>Steps</h3>
      <ol class="step-list-box">
        <% recipe.steps.each do |s| %>
          <li class="step-box"><%= s.instructions %></li>
        <% end %>
      </ol>
    </div>
  </div>
</div>